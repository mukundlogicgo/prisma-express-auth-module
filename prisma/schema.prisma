generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Provider {
  email
  google
}

model User {
  id             Int      @id @default(autoincrement())
  name           String
  email          String   @unique
  emailVerified  Boolean  @default(false)
  profilePicture String?
  password       String?
  provider       Provider
  providerId     String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}
